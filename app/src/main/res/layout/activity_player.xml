<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_16sdp"
        tools:context=".presentation.ui.PlayerActivity">

        <ImageView
            android:id="@+id/iconBack"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iconFavorite"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_favorite_full"
            app:layout_constraintBottom_toBottomOf="@id/iconBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iconBack" />

        <androidx.cardview.widget.CardView
            android:id="@+id/containerSongImage"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:padding="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iconBack">

            <ImageView
                android:id="@+id/songImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/bold_italic"
            android:gravity="center"
            android:textColor="@color/color_text_primary"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/containerSongImage"
            tools:text="Song name" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@color/color_accent"
            app:layout_constraintEnd_toEndOf="@id/textSongName"
            app:layout_constraintStart_toStartOf="@id/textSongName"
            app:layout_constraintTop_toBottomOf="@id/textSongName" />


        <ImageView
            android:id="@+id/iconLoop"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_loop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iconShare"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_share"
            app:layout_constraintBottom_toBottomOf="@id/iconLoop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iconLoop" />

        <ImageView
            android:id="@+id/iconEqualizer"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_sound_wave"
            app:layout_constraintBottom_toBottomOf="@id/iconLoop"
            app:layout_constraintEnd_toStartOf="@id/iconTimes"
            app:layout_constraintStart_toEndOf="@id/iconLoop"
            app:layout_constraintTop_toTopOf="@id/iconLoop" />

        <ImageView
            android:id="@+id/iconTimes"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_times"
            app:layout_constraintBottom_toBottomOf="@id/iconLoop"
            app:layout_constraintEnd_toStartOf="@id/iconShare"
            app:layout_constraintStart_toEndOf="@id/iconEqualizer"
            app:layout_constraintTop_toTopOf="@id/iconLoop" />

        <ImageView
            android:id="@+id/buttonPausePlay"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:background="@drawable/bg_accent_border_min"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/icon_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textSongName" />

        <ImageView
            android:id="@+id/buttonPrevious"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/bg_primary_border_full"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/icon_previous"
            app:layout_constraintBottom_toBottomOf="@id/buttonPausePlay"
            app:layout_constraintEnd_toStartOf="@id/buttonPausePlay"
            app:layout_constraintTop_toTopOf="@id/buttonPausePlay"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/buttonNext"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:background="@drawable/bg_primary_border_full"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/icon_next"
            app:layout_constraintBottom_toBottomOf="@id/buttonPausePlay"
            app:layout_constraintStart_toEndOf="@id/buttonPausePlay"
            app:layout_constraintTop_toTopOf="@id/buttonPausePlay"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textTimeStartSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:fontFamily="@font/regular"
            android:textColor="#959595"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonPausePlay"
            tools:text="00:00" />

        <TextView
            android:id="@+id/textTimeEndSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@id/textTimeStartSong"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textTimeStartSong"
            tools:text="00:00" />

        <SeekBar
            android:id="@+id/songProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            app:layout_constraintBottom_toBottomOf="@id/textTimeStartSong"
            app:layout_constraintEnd_toStartOf="@id/textTimeEndSong"
            app:layout_constraintStart_toEndOf="@id/textTimeStartSong"
            app:layout_constraintTop_toTopOf="@id/textTimeStartSong" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>